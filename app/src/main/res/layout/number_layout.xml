<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/credentialValueTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/credentials"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layoutTwo"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                />

            <TextView
                android:id="@+id/displayResultTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="textStart"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/credential_bg"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutOne"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/textOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:hint="@string/text_1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textOneEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="@string/questionMark"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#8F000000"
            android:layout_weight=".01"/>
        <TextView
            android:id="@+id/textTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:hint="@string/text_2"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textTwoEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="@string/questionMark"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            tools:ignore="UselessLeaf">

            <android.widget.Button
                android:id="@+id/num7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/num_bg_1"
                android:text="@string/seven"
                android:textColor="#8A000000"
                android:textSize="25sp"
                tools:ignore="VisualLintButtonSize" />
            <android.widget.Button
                android:id="@+id/num8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/num_bg_1"
                android:text="@string/eight"
                android:textColor="#8A000000"
                android:textSize="25sp"
                tools:ignore="VisualLintButtonSize" />
            <android.widget.Button
                android:id="@+id/num9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/num_bg_1"
                android:text="@string/nine"
                android:textColor="#8A000000"
                android:textSize="25sp"
                tools:ignore="VisualLintButtonSize" />
            <android.widget.Button
                android:id="@+id/allClearBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:background="@drawable/num_bg_1"
                android:text="@string/ac"
                android:textColor="#8A000000"
                android:textSize="25sp"
                tools:ignore="VisualLintButtonSize" />



        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            tools:ignore="UselessLeaf">

            <android.widget.Button
                android:id="@+id/num4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/num_bg_1"
                android:text="@string/four"
                android:textColor="#8A000000"
                android:textSize="25sp"
                tools:ignore="VisualLintButtonSize" />
            <android.widget.Button
                android:id="@+id/num5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/num_bg_1"
                android:text="@string/five"
                android:textColor="#8A000000"
                android:textSize="25sp"
                tools:ignore="VisualLintButtonSize" />
            <android.widget.Button
                android:id="@+id/num6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/num_bg_1"
                android:text="@string/six"
                android:textColor="#8A000000"
                android:textSize="25sp"
                tools:ignore="VisualLintButtonSize" />
            <android.widget.Button
                android:id="@+id/clearBnt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:background="@drawable/num_bg_1"
                android:text="@string/c"
                android:textColor="#8A000000"
                android:textSize="25sp"
                tools:ignore="VisualLintButtonSize" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    tools:ignore="UselessLeaf">

                    <android.widget.Button
                        android:id="@+id/num1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/num_bg_1"
                        android:text="@string/one"
                        android:textColor="#8A000000"
                        android:textSize="25sp"
                        tools:ignore="VisualLintButtonSize" />
                    <android.widget.Button
                        android:id="@+id/num2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/num_bg_1"
                        android:text="@string/two"
                        android:textColor="#8A000000"
                        android:textSize="25sp"
                        tools:ignore="VisualLintButtonSize" />
                    <android.widget.Button
                        android:id="@+id/num3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/num_bg_1"
                        android:text="@string/three"
                        android:textColor="#8A000000"
                        android:textSize="25sp"
                        tools:ignore="VisualLintButtonSize" />

                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="UselessLeaf">

                    <android.widget.Button
                        android:id="@+id/num0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/num_bg_1"
                        android:text="@string/zero"
                        android:textColor="#8A000000"
                        android:textSize="25sp"
                        tools:ignore="VisualLintButtonSize" />
                    <android.widget.Button
                        android:id="@+id/dotBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/num_bg_1"
                        android:text="@string/dot"
                        android:textColor="#8A000000"
                        android:textSize="25sp"
                        tools:ignore="VisualLintButtonSize" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight=".5" >

                <android.widget.Button
                    android:id="@+id/equalBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/num_bg_2"
                    android:text="@string/next"
                    android:textSize="40sp"
                    tools:ignore="ContentDescription,SpeakableTextPresentCheck,VisualLintButtonSize" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>